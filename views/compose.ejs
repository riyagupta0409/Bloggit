<%- include('partials/header1') -%>
    <div class="container1">
        <div class="compose">
            <h1>CREATE YOUR BLOG</h1>
        </div>
        <div class="form">
            <form action="/post/compose" method="POST" enctype="multipart/form-data">
                <input type="text" name="postTitle" placeholder="Give a title to your post..." required>
                <input type="text" name="postdes" placeholder="Enter a short description about your post..." required>
                <textarea name="postBody" id="" cols="30" rows="4" placeholder="Enter Content..."></textarea>
                <div class="form-input">
                    <label for="postCategory" class="postCategory">Category : </label>
                    <select class="postCategory" name="postCategory">
                    <% for(var i = 0; i <categories.length;i++){ %>
                        <option name=<%=categories[i].title%> value=<%=categories[i]._id%>><%=categories[i].title%></option>
                        <% } %>  
        </select>
                </div>
                <input type="file" id="image" name="image" accept="image/*" required>
                <textarea name="userkeywords" id="" cols="30" rows="1.5" maxlength="40" placeholder="Add keywords related to your blogs(seprate them by commas)"></textarea>
                <button class="submit">SUBMIT</button>

            </form>
        </div>

    </div>


    <script src=" /js/main.js "></script>
    <script src="https://code.jquery.com/jquery-3.5.1.js " integrity="sha256-QWo7LDvxbWT2tbbQ97B53yJnYU3WhH/C8ycbRAkjPDc=" crossorigin=" anonymous "></script>
    <script type="text/javascript ">
        $(document).ready(function() {
            $('.menu-btn').click(function() {
                $('nav').toggleClass('active');
            })
        })
    </script>

    </body>

    </html>